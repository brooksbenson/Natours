{
  "name": "Natours",
  "version": "1.0.0",
  "description": "A follow along project provided by Jonas Schmedtmann in his Advanced CSS and Sass course",
  "main": "index.js",
  "author": "Brooks Benson",
  "license": "MIT",
  "scripts": {
    "live": "live-server",
    "watch:scss": "node-sass sass/main.scss css/style.css -w",
    "start": "npm-run-all --parallel live watch:scss",

    "compile:scss": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-fonts.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 version' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:scss concat:css prefix:css compress:css" 
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "concat": "^1.0.3",
    "install": "^0.10.1",
    "live-server": "^1.2.0",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.1",
    "npm-run-all": "^4.1.2"
  }
}
